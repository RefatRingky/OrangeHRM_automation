{
  "name": "selenium-webdriver-automation",
  "version": "1.0.0",
  "description": "Full Selenium WebDriver automation for SauceDemo with Mocha and Allure reporting",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "mocha tests/*.js --reporter allure-mocha",
